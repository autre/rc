[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	editor = gvim -f
	pager = less -FRSX
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
	st = status
	d = diff
	df = diff
	co = checkout
	ci = commit
	w = whatchanged
	br = branch
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	wtf = !git-wtf

[push]
	default = tracking

[pull]
	default = current

[merge]
	tool = gvim -fd
	stat = true

[advice]
	statusHints = false
[diff]
	renames = copies
	mnemonicprefix = true
[branch]
	autosetupmerge = true
	autosetuprebase = always
[rerere]
	enabled = true
