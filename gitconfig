        ;FIXME: rb = rebase -p
        ;FIXME: up = fetch origin &&

[push]
	default = tracking

[pull]
	default = current

[merge]
	tool = gvimdiff
	stat = true

[advice]
	statusHints = false

[diff]
	renames = copies
	mnemonicprefix = true

[branch]
	autosetupmerge = true
	autosetuprebase = always

[rerere]
	enabled = true

[diff "lisp"]
	xfuncname="^(\\((def|test).*)$"

