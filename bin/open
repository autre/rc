#!/bin/bash

prog=`basename $0`

if [ ! -f "$1" ] ; then
	echo "$prog: cannot open $1: No such file or directory" 1>&2
	exit 1
fi

shopt -u nocasematch

case `file -k "$1"` in
	*video*) cmd=vlc ;;
	*image*) cmd=feh ;;
	*pdf*) cmd=xpdf ;;
	*) echo "$prog: don't know how to open $1"; exit 1;;
esac

exec $cmd "$1" 2>/dev/null

