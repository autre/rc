[user]
	name = autre
	email = b.alexandrou@protonmail.ch

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	editor = git-edit
	pager = less -FRSX
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	attributesfile = ~/.gitattributes

[alias]
	st = status
	d = diff
	df = diff
	co = checkout
	ci = commit
	w = whatchanged
	br = branch
	hist = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	datetag = '!git tag `date "+%Y%m%d%H%M"`'

[push]
	default = tracking

[pull]
	default = current

[merge]
	tool = git-edit -d
	stat = true

[advice]
	statusHints = false

[diff]
	renames = copies
	mnemonicprefix = true

[branch]
	autosetupmerge = true
	autosetuprebase = always

[rerere]
	enabled = true

[diff "lisp"]
	xfuncname="^(\\((def|test).*)$"
